<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="buttonBig" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/dp_32</item>
        <item name="android:layout_marginRight">@dimen/dp_32</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/color_et_hint</item>
        <item name="android:textColorHint">@color/color_et_hint</item>
        <item name="colorControlNormal">@color/color_et_hint</item>
        <item name="colorControlActivated">@color/color_et_hint</item>
        <item name="colorControlHighlight">@color/colorPink</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPink</item>
        <item name="android:textColorSecondary">#323a45</item>
    </style>

    <style name="BrandedSwitch" parent="AppTheme">
        <item name="colorAccent">@color/colorPink</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
