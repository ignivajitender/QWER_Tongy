<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_with_heading" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="vertical"
                android:padding="@dimen/_10dp">

                <com.igniva.qwer.ui.views.TextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textColor="@color/text_medium_grey" />

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@drawable/edit_text_white_rounded_corners"
                    android:hint="@string/add_title"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/_4dp"
                    android:textColor="@color/text_dark_grey"
                    android:textCursorDrawable="@drawable/color_cursor" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical"
                android:padding="@dimen/_10dp">

                <com.igniva.qwer.ui.views.TextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_description"
                    android:textAllCaps="true"
                    android:textColor="@color/text_medium_grey" />

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@drawable/edit_text_white_rounded_corners"
                    android:gravity="top"
                    android:hint="@string/add_description"
                    android:inputType="text"
                    android:maxLines="3"
                    android:padding="@dimen/_4dp"
                    android:textColor="@color/text_dark_grey"
                    android:textCursorDrawable="@drawable/color_cursor"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical"
                android:padding="@dimen/_10dp">

                <com.igniva.qwer.ui.views.TextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_image"
                    android:textAllCaps="true"
                    android:textColor="@color/text_medium_grey" />

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@drawable/edit_text_white_rounded_corners"
                    android:src="@drawable/add_image_post"
                    android:inputType="none"
                    android:padding="@dimen/_10dp"



                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_post_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/blue_round_button"
                android:gravity="center">

                <com.igniva.qwer.ui.views.TextViewBold
                    android:id="@+id/tvPostNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:paddingBottom="@dimen/_10dp"
                    android:paddingLeft="@dimen/_25dp"
                    android:paddingRight="@dimen/_25dp"
                    android:paddingTop="@dimen/_10dp"
                    android:text="@string/post_now"
                    android:textAllCaps="true"
                    android:textColor="@color/bg_white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
