<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5dp"
    android:id="@+id/ll_outer_layout"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/_10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_banner"
            android:layout_gravity="center"
            android:src="@drawable/professional" />

        <TextView
            android:id="@+id/tv_language_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_2dp"
            android:text="English"
            android:textColor="@color/text_dark_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/text_light_grey" />

            <TextView
                android:id="@+id/tv_language_proficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_medium_grey"
                android:gravity="center"
                android:text="Professional" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/text_light_grey" />

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_8dp"
                android:src="@drawable/remove" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>