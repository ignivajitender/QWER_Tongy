<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_bg"
    android:orientation="vertical"

    >

    <FrameLayout
        android:id="@+id/ll_back"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        android:background="@drawable/back_black">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_4dp"
            android:paddingRight="@dimen/_8dp"

            />

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:src="@drawable/forgot_password" />

    <com.igniva.qwer.ui.views.TextViewRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/forgot_pass"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/_18sp" />

    <com.igniva.qwer.ui.views.TextViewRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:text="@string/forgot_pass_text"
        android:textColor="@color/bg_white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@null"
        android:drawableLeft="@drawable/email"
        android:gravity="left"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:text="@string/email"
        android:textColor="@color/bg_white"
        android:focusable="false"
        android:visibility="gone"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_email"
        style="@style/TextAppearence.App.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        >
    <android.support.design.widget.TextInputEditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/bg_white"
        android:inputType="textEmailAddress"
        android:layout_gravity="left"
        android:hint="@string/email"
        android:drawableLeft="@drawable/email"

        android:textColor="@color/bg_white" />
</android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/ll_lets_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:gravity="center"
         android:background="@drawable/rounded_background_white"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="?attr/selectableItemBackground"

            android:gravity="center"
            android:paddingBottom="@dimen/_8dp"
            android:paddingLeft="@dimen/_35dp"
            android:textColor="@color/bg_blue"
            android:paddingRight="@dimen/_35dp"
            android:paddingTop="@dimen/_8dp"
            android:text="@string/submit"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>