<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_skyline"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/ll_back"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        android:background="@drawable/quarter_circle"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/_4dp"
            android:paddingRight="@dimen/_8dp"
            android:src="@drawable/back" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16dp">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:drawableLeft="@drawable/email"
                        android:drawablePadding="@dimen/_4dp"
                        android:hint="@string/prompt_name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textStyle="bold" />

                </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                style="@style/TextAppearence.App.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16dp">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="@dimen/_4dp"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textStyle="bold" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                style="@style/TextAppearence.App.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="@dimen/_4dp"
                    android:hint="@string/prompt_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textStyle="bold" />

            </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">



                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/tv_changePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/bg_off_white"
                    />

                <TextView
                    android:id="@+id/tv_TandC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tandCAgree"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12dp"  />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:padding="@dimen/_10dp">


                <Button
                    android:id="@+id/btn_signUp"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/_30dp"
                    android:layout_marginRight="@dimen/_30dp"
                    android:background="@drawable/ripple_button_background_white"
                    android:gravity="center"
                    android:text="@string/signup"
                    android:textAllCaps="true"
                    android:textColor="@color/fb_blue_color"
                    android:textSize="@dimen/_10sp"></Button>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_fbSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:padding="@dimen/_12dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginLeft="@dimen/_48dp"
                android:layout_marginRight="@dimen/_48dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_weight="3.05"
                android:background="@drawable/ripple_button_background_fb"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fb"
                    android:layout_width="0dp"
                    android:foregroundGravity="left"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/_4dp"
                    android:src="@drawable/ms__arrow" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_weight="0.05"
                    android:background="@color/bg_off_white"
                    android:padding="@dimen/_4dp"></View>

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:padding="@dimen/_8dp"
                    android:text="@string/signUpFacebook"
                    android:textAllCaps="true"
                    android:textColor="@color/bg_off_white"
                    android:textSize="@dimen/_10sp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>